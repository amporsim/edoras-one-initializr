package {{packageName}};

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.core.Ordered;
import org.springframework.core.annotation.Order;
import org.springframework.web.WebApplicationInitializer;
import org.springframework.web.context.support.XmlWebApplicationContext;
import org.springframework.web.servlet.DispatcherServlet;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.ServletRegistration;

/**
 * This class will be automatically triggered on startup and replaces the web.xml configuration.
 */
@Order(Ordered.LOWEST_PRECEDENCE) // Allow edoras one to be initialized first
public class {{capitalShortName}}WebApplicationInitializer implements WebApplicationInitializer {

    private static final Logger LOG = LoggerFactory.getLogger({{capitalShortName}}WebApplicationInitializer.class);

    private final static String CONTEXT = "/{{shortName}}";

    @Override
    public void onStartup(ServletContext servletContext) throws ServletException {
        XmlWebApplicationContext appContext = new XmlWebApplicationContext();
        appContext.setConfigLocation("classpath:{{packagePath}}/edoras-addon-{{shortName}}-context.xml");

        ServletRegistration.Dynamic dispatcher =
                servletContext.addServlet("edoras-addon-{{shortName}}-dispatcher", new DispatcherServlet(appContext));
        dispatcher.setLoadOnStartup(1);
        dispatcher.addMapping(CONTEXT + "/*");

        LOG.info("--------- edoras one {{capitalShortName}} Addon initialized -----------");
    }
}